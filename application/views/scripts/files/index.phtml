<div id="top-fix" class="clear">
    <form id="filterForm" action="" method="post">
        <div id="top-m" class="clear">
            <div class="left">
                <label><?=$this->translate('L_FILTER')?></label>
                <input id="filterSearch" name="search" value="" title="" type="text" />
                <img id="searchIcon" src="/images/zoom.png" class="searchIcon cursor" onclick="goFilesListLink(1);"/>
            </div>
            <div class="right">
                <a id="addFileLink" href="#" data-type="" data-object="" class="button newicons2" title="<?=$this->translate('L_ADD_FILE')?>" onclick="openFileAddForm($(this).data('type'), $(this).data('object'));return false;">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                </a>
            </div>
        </div>
        <div id="middle" class="clear">
            <div>
                <label>Тип файла</label>
                <select id="filterType" name="type" onchange="filesFilterTypeChange(this.value);">
                    <option value="0"><?=$this->translate('L_ALL')?></option>
                    <option value="project"><?=$this->translate('L_PROJECT')?></option>
                    <option value="server"><?=$this->translate('L_SERVER')?></option>
                    <option value="domain"><?=$this->translate('L_DOMAIN')?></option>
                    <option value="web-app"><?=$this->translate('L_WEB_APPS');?></option>
                    <option value="server-software"><?=$this->translate('L_SPO');?></option>
                </select>
            </div>
            <div id="parentDiv">
                <label><?=$this->translate('L_PARENT')?></label>
                <select id="filterParent" name="parent" onchange="filesFilterParentChange(this.value)">
                    <option value="0"><?=$this->translate('L_ALL')?></option>
                </select>
            </div>
            <div id="objectDiv">
                <label><?=$this->translate('L_OBJECT')?></label>
                <select id="filterObject" name="object_id" onchange="filesFilterObjectChange(this.value);if (!app_navigation) {goFilesListLink(1)}">
                    <option value="0"><?=$this->translate('L_ALL')?></option>
                </select>
            </div>
        </div>
    </form>
</div><!--End #top-fix-->

